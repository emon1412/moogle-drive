{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "class-methods-use-this": "warn",
    "consistent-return": "warn",
    "lines-around-comment": [
      2,
      {
        "beforeLineComment": true,
        "allowObjectStart": true,
        "allowBlockStart": true
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-underscore-dangle": 0,
    "no-console": "off",
    "strict": 0,
    "no-shadow": "off",
    "no-unsafe-finally": "warn",
    "import/prefer-default-export": "warn",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 150,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "mocha"
  ]
}
